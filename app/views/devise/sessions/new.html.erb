<div class='col d-flex justify-content-center mt-5'>
  <h1> Login </h1>
</div>

<div class='col d-flex justify-content-center mt-4'>
  <%= form_for(resource, as: resource_name, url: session_path(resource_name), html:{ class: 'col-2'} ) do |f| %>

    <div class='form-outline mb-4'>
      <%= f.label :email, class: 'form-label' %>
      <%= f.email_field :email, autofocus: true, autocomplete: 'email', class: 'form-control' %>
    </div>

    <div class='form-outline mb-4'>
      <%= f.label :password, class: 'form-label' %>
      <%= f.password_field :password, autocomplete: 'current-password', class: 'form-control' %>
    </div>

    <% if devise_mapping.rememberable? %>
    <div class='row mb-4'>
      <div class='col d-flex justify-content-center'>
        <div class='form-check'>
        <%= f.check_box :remember_me, class: 'form-check-input' %>
        <%= f.label :remember_me, class: 'form-check-label' do %>
          <%= resource.class.human_attribute_name('remember_me') %>
        <% end %>
        </div>
      </div>

      <div class='col'>
        <%= link_to t('.forgot_password?'), new_password_path(resource_name)%>
      </div>
    </div>
    <% end %>

    <div class='form-outline mb-4'>
      <div class='col d-flex justify-content-center'>
      <%= f.submit t('.sign_in'), class: 'btn btn-primary btn-block mb-4 form-control' %>
      </div>

      <div class='col d-flex justify-content-center'>
        <p>Not a member? <%= link_to t('.register'), new_registration_path(resource_name) %> </p>
      </div>
    </div>
  <% end %>

</div>
