
<link rel="stylesheet" type="text/css" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css" />
<div class="container bootdey">
    <div class="panel panel-default panel-order">
        <div class="panel-heading">
          <h2> <strong>Order history</strong> </h2>
        </div>

        <% @orders.each do |order| %>
        <div class="panel-body">
            <div class="row">
                <div class="col-md-11">
                    <div class="row">
                        <div class="col-md-12">
                            <div class="pull-right"><label class="label label-danger text-black badge"> <%= order.status %></label></div>
                            <span class="d-block p-2 p-3 mb-2"><h3>Order <%=order.id %></h3></span> <br />
                            Ð¡ost: $<%= order.sum_cents%> <br />
                        </div>
                        <% order.order_items.each do |order_items| %>
                        <div class="col-md-12">
                        <div class="pull-right"><label class="label label-danger"> <%= link_to 'show product', order_items.product, class: 'btn btn-primary badge bg-primary btn-sm'%></label></div>

                      </div>

                        <% end %>
                        <div class="col-md-12">order made on: <%= order.created_at.strftime("%Y-%m-%d") %> </div>
                    </div>
                </div>
            </div>

        </div>
        <% end %>
    </div>
</div>
